 page {
   height: 100%;
   background-color: #b3d4db

 }
 .container {
   display: flex;
   flex-direction: column;
   align-items: center
   }

.user-avatar {
   /*px是物理分辨率，pt为逻辑分辨率，在ip6下 1px = 1rpx = 0.5pt,rpx是自适应的 */
   width: 200rpx;
   height: 200rpx;
   margin-top:160rpx
 }
 .greeting {
   margin-top: 100rpx;
   font-size: 32rpx;
   font-weight: bold
 }
 .title-wrapper {
   margin-top: 180rpx;
   border: 1px solid #405f80;
   width: 200rpx;
   height: 80rpx;
   border-radius: 5px;
   text-align: center
 }
 .title {
   font-size: 22rpx;
   font-weight: bold;
   color: #405f80;
   line-height: 80rpx
 }